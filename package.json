{
  "name": "charity-website",
  "version": "1.0.0",
  "description": "Charity/NGO website with admin panel",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "demo": "nodemon server-demo.js",
    "client": "cd client && npm start",
    "dev:full": "concurrently \"npm run dev\" \"npm run client\"",
    "demo:full": "concurrently \"npm run demo\" \"npm run client\"",
    "setup": "node setup.js",
    "build": "cd client && npm run build",
    "deploy": "bash deploy-live.sh"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "charity",
    "ngo",
    "react",
    "nodejs",
    "mysql"
  ],
